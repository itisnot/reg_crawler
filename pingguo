import requests
import re
import time
domain = 'http://www.pgjyw.com'

pingguo_reg = '<tr>.*?<a href=.*?title="(.*?)">'
url = 'http://www.pgjyw.com/qtxs/ats?currentPage=1&atname=jydt'
num = 0
while 1:
    response=requests.get(url)
    print(response)
    str = response.text
    #print(str)
    #results=re.findall(maoyan_reg, str, re.S)
    results=re.findall(pingguo_reg,str,re.S)
    print(type(results))
    for result in results:
        print(result)
        num+=1
        print('num=',num)
    href_regex = '<a href="(.*?)">下一页'
    nexthref = re.search(href_regex,str)
    try:
        url1 = domain + nexthref.group(1)
    except AttributeError:
        print('哈哈')
        time.sleep(5)
        continue
    if url != url1:
        url=url1
    else:
        break
    print(url)
print('任务完成！！')
